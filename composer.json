{
    "name": "joao-ramajo/noweb-teste-tecnico-codeigniter",
    "description": "API REST desenvolvida com Code Igniter 3",
    "authors": [
        {
            "name": "Jo√£o Ramajo",
            "email": "joaoramajo744@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "app\\": "application/"
        }
    },
    "require": {
        "vlucas/phpdotenv": "^5.6"
    },
    "scripts": {
        "project:init" : [
            "cp .env.example .env",
            "composer install",
            "docker compose up -d --build",
            "composer db:reset",
            "@php welcome.php"
        ],
        "db:reset": "docker exec -it noweb-teste-tecnico-codeigniter-app-1 php application/cli/migrate.php",
        "test": "./vendor/bin/pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "1.23.1"
    }
}
